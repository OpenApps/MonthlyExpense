				android:layout_height="wrap_content" android:text="@string/layout_health" />
			<EditText android:inputType="number" android:id="@+id/health" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/latLabel" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/layout_education" />
			<EditText android:inputType="number" android:id="@+id/education" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<Button android:id="@+id/send2Button" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="@string/layout_send" />
		</LinearLayout>
	</ScrollView>
