				android:layout_height="wrap_content" android:text="@string/layout_entertainment" />
			<EditText android:inputType="number" android:id="@+id/entertaiment"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<TextView android:id="@+id/latLabel" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/layout_neuchtenka" />
			<EditText android:inputType="number" android:id="@+id/neuchtenka" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/latLabel" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/layout_car" />
			<EditText android:inputType="number" android:id="@+id/car" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/latLabel" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/layout_big_purchase" />
			<EditText android:inputType="number" android:id="@+id/purchase" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
