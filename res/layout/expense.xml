				android:layout_height="wrap_content" android:text="@string/layout_phone_bill" />
			<EditText android:inputType="number" android:id="@+id/phoneBill" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/latLabel" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/layout_clothing" />
			<EditText android:inputType="number" android:id="@+id/clothing" android:layout_width="fill_parent"
