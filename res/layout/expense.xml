				android:layout_height="wrap_content" />
			<TextView android:id="@+id/latLabel" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/layout_food" />
			<EditText android:inputType="number" android:id="@+id/food" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
